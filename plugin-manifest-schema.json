{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for Claude Code plugin metadata",
  "type": "object",
  "required": ["id", "name", "version", "description", "author"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the plugin (e.g., com.example.gradle-wrapper)",
      "pattern": "^[a-z0-9-]+(\\.[a-z0-9-]+)*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable plugin name"
    },
    "version": {
      "type": "string",
      "description": "Semantic version (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?$"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the plugin does"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's email address"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Author's website or profile URL"
        }
      }
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "URL to the plugin's source code repository"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to the plugin's documentation or homepage"
    },
    "keywords": {
      "type": "array",
      "description": "Keywords for plugin discovery",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "category": {
      "type": "string",
      "description": "Plugin category",
      "enum": [
        "build-tools",
        "testing",
        "code-generation",
        "dependency-management",
        "documentation",
        "deployment",
        "code-quality",
        "other"
      ]
    },
    "gradle": {
      "type": "object",
      "description": "Gradle-specific configuration",
      "properties": {
        "minVersion": {
          "type": "string",
          "description": "Minimum Gradle version required"
        },
        "maxVersion": {
          "type": "string",
          "description": "Maximum Gradle version supported"
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "List of skills/capabilities provided by the plugin",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Skill name"
          },
          "description": {
            "type": "string",
            "description": "What this skill does"
          },
          "examples": {
            "type": "array",
            "description": "Example usage scenarios",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Other plugins this plugin depends on",
      "items": {
        "type": "string"
      }
    }
  }
}
